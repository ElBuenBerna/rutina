<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.iteso.myapplication.MainActivity">


    <TextView
        android:id="@+id/text_view_prueba"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_above="@+id/text_view_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-153dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
        android:text="Prueba"
        android:textSize="20sp" />

    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/progress_bar"
        android:minWidth="240dp"
        android:minHeight="240dp"
        style = "@style/Widget.MaterialProgressBar.ProgressBar"
        android:progressTint="@android:color/holo_red_dark"
        android:progressBackgroundTint="@android:color/holo_red_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="161dp"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="17dp"
        android:text="start" />

    <Button
        android:id="@+id/button_rutina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="16dp"
        android:text="Empezar Rutina"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="72dp"
        android:layout_marginStart="30dp"
        android:text="Anterior" />

    <TextView
        android:id="@+id/rutina_repeticiones_anterior"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="174dp"
        android:layout_marginStart="99dp"
        android:text="99"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rutina_ejercicio_anterior"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="121dp"
        android:layout_marginStart="42dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/rutina_repeticiones_siguiente"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/rutina_repeticiones_anterior"
        android:layout_alignEnd="@+id/button_start_pause"
        android:text="79"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rutina_ejercicio_siguiente"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rutina_repeticiones_anterior"
        android:layout_marginEnd="41dp"
        android:autoSizeMaxTextSize="15sp"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeTextType="uniform"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_toEndOf="@+id/text_view_prueba"
        android:text="Siguiente"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/rutina_repeticiones_actual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:textColor="@android:color/black"
        android:text="12"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:text="Actual" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="143dp"
        android:layout_height="126dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="99dp"
        android:layout_marginStart="13dp"
        android:visibility="visible"
        app:srcCompat="@drawable/squarered" />

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:src="@drawable/squarered" />

    <TextView
        android:id="@+id/rutina_sets_faltantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="106dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/rutina_sets_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_view_prueba"
        android:layout_alignStart="@+id/imageView"
        android:text="Sets restantes:" />


</RelativeLayout>
