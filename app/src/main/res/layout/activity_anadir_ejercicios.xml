<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityAnadirEjercicios">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Elige Ejercicio(s):"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_anadir_ejercicios_recicler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/activity_anadir_ejercicios_boton_terminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terminar_rutina"
        />

</LinearLayout>